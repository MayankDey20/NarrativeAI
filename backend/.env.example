# Server
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Database
DATABASE_URL="postgresql://mayank@localhost:5432/narrativeai?schema=public"


# JWT
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRES_IN=7d

# Mistral AI (API-based - Optional if using Ollama)
MISTRAL_API_KEY=API_BASE_URL_KEY_HERE
MISTRAL_MODEL_PRIMARY=mistral-large-latest
MISTRAL_MODEL_SECONDARY=mistral-medium-latest
MISTRAL_MAX_TOKENS=2000

# Ollama (Local AI - Default)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral
OLLAMA_MAX_TOKENS=2000

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
